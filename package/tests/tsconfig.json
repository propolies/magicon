{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "noEmit": true,
    "paths": {
      "@magicons/core/*": ["../src/lib/*"],
    }
  },
  "ignoreConfigErrors": true,
  "include": ["unit/**/*.ts"]
}